<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="148dp">

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent" >

			<ImageView
				android:src="@drawable/bfg"
				android:id="@+id/imageView2"
				android:layout_width="100dp"
				android:layout_height="100dp" />

			<TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

				<TextView android:id="@+id/latLongTextView" android:text="Lat/Long" android:textSize="24sp"
    android:layout_width="147dp" android:layout_height="wrap_content"
    tools:ignore="HardcodedText"></TextView>

			</TableRow>

		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent" >

			<TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

			</TableRow>

			<TextView android:text="City Name" android:id="@+id/cityNameTextView"
        android:textSize="24sp" 	android:layout_width="match_parent" android:layout_height="wrap_content"
        tools:ignore="HardcodedText"></TextView>

		</TableRow>

	</TableLayout>

	<!-- The id of the list is special. -->
	<!-- This is needed to set the default list of ListActivity -->

	<ListView android:id="@android:id/list"
		android:layout_height="wrap_content"
		android:layout_width="match_parent">
	</ListView>
</LinearLayout>
